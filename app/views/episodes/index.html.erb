<p id="notice"><%= notice %></p>

<h1>Episodes</h1>
<br>
<form method="GET" action="/episodes">
  Title: <input type="text" name="filter" />  
  Season: <select name="season_id">
  <% Season.all.each do | s | %>
       <option value="<%= s.id %>"> <%= s.number%>. <%= s.show.name%></option>
  <% end %>
</select>
  <input type="submit" />
</form>
<br>

<br>

<table>
  <thead>
    <tr>
      <th>Number</th>
      <th>Title</th>
      <th>Emmited at</th>
      <th>Minutes</th>
      <th>Show</th>
      <th>Season</th>
      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @episodes.each do |episode| %>
      <tr>
        <td><%= episode.number %></td>
        <td><%= episode.title %></td>
        <td><%= episode.emmited_at %></td>
        <td><%= episode.minutes %></td>
        <td><%= episode.season.show.name %></td>
        <td><%= episode.season_id %></td>
        <td><%= link_to 'Show', episode %></td>
        <td><%= link_to 'Edit', edit_episode_path(episode) %></td>
        <td><%= link_to 'Destroy', episode, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Episode', new_episode_path %>
